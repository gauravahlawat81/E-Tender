<p id="notice"><%= notice %></p>
      <% if current_user %>
          <%= link_to "Logout",destroy_user_session_path,method: :delete %>
          <% end %>
<h1>Tenders</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% unless @tenders.blank? %> 
    <% @tenders.each do |tender| %>
      <tr>
        <td><%= tender.title %></td>
        <td><%= tender.body %></td>
        <td><%= link_to 'Show', tender %></td>
        <td><%= link_to 'Edit', edit_tender_path(tender) if logged_in?(:admin) %></td>
        <td><%= link_to 'Destroy', tender, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:admin) %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tender', new_tender_path if logged_in?(:admin,:user)%>
